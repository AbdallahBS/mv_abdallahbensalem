{# templates/email/send_email.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Send Email{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Send Email</h1>

    <div class=" ">
        <div class="card-body">
            {{ form_start(email_form) }}
                <div class="mb-3">
                    {{ form_label(email_form.recipient, 'Recipient', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(email_form.recipient, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(email_form.recipient) }}
                </div>
                <div class="mb-3">
                    {{ form_label(email_form.subject, 'Subject', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(email_form.subject, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(email_form.subject) }}
                </div>
                <div class="mb-3">
                    {{ form_label(email_form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(email_form.message, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(email_form.message) }}
                </div>
                <div class="d-grid">
                    {{ form_widget(email_form.send, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                </div>
            {{ form_end(email_form) }}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success mt-3">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
